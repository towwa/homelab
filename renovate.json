{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":pinVersions",
        ":semanticCommits",
        ":rebaseStalePrs",
        ":prConcurrentLimit5",
        ":prHourlyLimit2"
    ],
    "enabledManagers": [
        "dockerfile",
        "docker-compose"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "digest",
                "patch"
            ],
            "automerge": true,
            "automergeType": "pr"
        },
        {
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "automerge": false
        },
        {
            "matchManagers": [
                "dockerfile",
                "docker-compose"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false,
            "labels": [
                "breaking-change"
            ]
        }
    ]
}